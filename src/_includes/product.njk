---
layout: "base.njk"
---

{% mycapture "head" %}
    <meta property="og:title" content="{{ title }}">
    <meta property="og:locale" content="nl_BE">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:url" content="https://lou-marie.be/producten/{{ id }}/">
    <meta property="og:image" content="https://lou-marie.be{{ image }}">
    <meta property="product:brand" content="Lou-Marie fashion">
    <meta property="product:availability" content="in stock">
    <meta property="product:condition" content="new">
    <meta property="product:price:amount" content="{{ price }}">
    <meta property="product:price:currency" content="EUR">
    <meta property="product:retailer_item_id" content="{{ id }}">
    <meta property="product:gender" content="female">
    <meta property="product:age_group" content="adult">
{% endmycapture %}

<section id="billboard" class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="section-title text-center mt-4" data-aos="fade-up">{{ title }}</h1>
            <div class="col-md-6 text-center" data-aos="fade-up" data-aos-delay="300">
                <p>{{ description }}</p>
            </div>
        </div>
        <div class="row" data-aos="fade-up">
            <div class="collection-item d-flex flex-wrap my-5">
                <div class="col-md-6 column-container">
                    <div class="image-holder">
                        <img src="{{ image }}" alt="{{ title }}" class="product-image ">
                    </div>
                </div>
                <div class="col-md-6 column-container bg-white">
                    <div class="collection-content p-5 m-0 m-md-5">
                        <h3 class="element-title text-uppercase">{{ price }} EUR</h3>
                        {{ content | safe }}
                        <stripe-buy-button
                            buy-button-id="{{ stripeButtonId }}"
                            publishable-key="pk_live_51QOzcVCrIr0CmQ1yNGPCELpBzUl5Wjdnc5no2Sg9MTTGQ61DE5I7wvwACvgwGWWEwqZ15ts6fJWiWP28tGjTSTdK00nuEggoqn"
                        >
                        </stripe-buy-button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script async src="https://js.stripe.com/v3/buy-button.js"></script>