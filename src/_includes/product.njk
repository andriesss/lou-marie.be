---
layout: "base.njk"
hideSellingPoints: true
hideStoreInfo: true
hidePictureBanner: true
---

{% mycapture "head" %}
    <meta property="og:image" content="https://lou-marie.be/images/products/{{ id }}/{{ id }}_1sq.jpg">
    <meta property="product:brand" content="Lou-Marie fashion">
    <meta property="product:availability" content="in stock">
    <meta property="product:condition" content="new">
    <meta property="product:price:amount" content="{{ price }}">
    <meta property="product:price:currency" content="EUR">
    <meta property="product:retailer_item_id" content="{{ id }}">
    <meta property="product:gender" content="female">
    <meta property="product:age_group" content="adult">
{% endmycapture %}

<section class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="section-title text-center mt-4">{{ title }}</h1>
            <div class="col-md-6 text-center" data-aos-delay="300">
                <p>{{ description }}</p>
            </div>
        </div>
        <div class="row">
            <div class="collection-item d-flex flex-wrap my-5">
                <div class="col-md-6 column-container">
                    <div class="image-holder">
                        <img src="{{ image }}" alt="{{ title }}" class="product-image img-fluid ">
                    </div>
                </div>
                <div class="col-md-6 column-container bg-white">
                    <div class="collection-content p-5 m-0 m-md-5">
                        <h3 class="element-title text-uppercase">{{ price | currency }}</h3>
                        {{ content | safe }}

                        <h5>Beschikbaar in maten</h5>
                        <ul>
                            {% for size in sizes %}
                                <li>{{ size | product_size }}</li>
                            {% endfor %}
                        </ul>

                        <h5>Samenstelling</h5>
                        <ul>
                            {% for item in composition %}
                                <li>{{ item }}</li>
                            {% endfor %}
                        </ul>
                        <a id="add-to-cart"
                           target="_blank"
                           href="{{ stripeButton }}"
                           class="btn btn-success text-uppercase mt-4 call-to-action"
                           onclick="onAddToCart('{{ id }}', '{{ title }}', {{ price }})">
                            <svg width="25" height="25" viewBox="0 0 24 24">
                                <use xlink:href="#gift"></use>
                            </svg>
                            Bestel nu!
                        </a>
                        <a target="_blank" href="https://wa.me/+32456890694" class="btn btn-light text-uppercase mt-4 call-to-action">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24"><path fill="currentColor" d="M19.05 4.91A9.82 9.82 0 0 0 12.04 2c-5.46 0-9.91 4.45-9.91 9.91c0 1.75.46 3.45 1.32 4.95L2.05 22l5.25-1.38c1.45.79 3.08 1.21 4.74 1.21c5.46 0 9.91-4.45 9.91-9.91c0-2.65-1.03-5.14-2.9-7.01m-7.01 15.24c-1.48 0-2.93-.4-4.2-1.15l-.3-.18l-3.12.82l.83-3.04l-.2-.31a8.26 8.26 0 0 1-1.26-4.38c0-4.54 3.7-8.24 8.24-8.24c2.2 0 4.27.86 5.82 2.42a8.18 8.18 0 0 1 2.41 5.83c.02 4.54-3.68 8.23-8.22 8.23m4.52-6.16c-.25-.12-1.47-.72-1.69-.81c-.23-.08-.39-.12-.56.12c-.17.25-.64.81-.78.97c-.14.17-.29.19-.54.06c-.25-.12-1.05-.39-1.99-1.23c-.74-.66-1.23-1.47-1.38-1.72c-.14-.25-.02-.38.11-.51c.11-.11.25-.29.37-.43s.17-.25.25-.41c.08-.17.04-.31-.02-.43s-.56-1.34-.76-1.84c-.2-.48-.41-.42-.56-.43h-.48c-.17 0-.43.06-.66.31c-.22.25-.86.85-.86 2.07s.89 2.4 1.01 2.56c.12.17 1.75 2.67 4.23 3.74c.59.26 1.05.41 1.41.52c.59.19 1.13.16 1.56.1c.48-.07 1.47-.6 1.67-1.18c.21-.58.21-1.07.14-1.18s-.22-.16-.47-.28"/></svg>
                            Vragen? Reserveren?
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="new-arrival" class="new-arrival product-carousel py-5 position-relative overflow-hidden">
    <div class="container">
        <div class="swiper product-swiper open-up" data-aos="zoom-out">
            <div class="swiper-wrapper d-flex">
                {% for image in extraImages %}
                    <div class="swiper-slide">
                        <div class="product-item image-zoom-effect link-effect">
                            <div class="image-holder position-relative">
                                <img src="{{ image }}" alt="{{ title }}" class="product-image img-fluid">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% mycapture "trackers" %}
    trackEvent('track', 'ViewContent', {
        content_ids: ['{{ id }}'],
        content_type: 'product',
    });
{% endmycapture %}

<script>
    gtag("event", "view_item", {
        currency: "EUR",
        value: {{ price }},
        items: [
            {
                item_id: "{{ id }}",
                item_name: "{{ title }}",
                price: {{ price }},
                quantity: 1,
            }
        ]
    });
</script>
